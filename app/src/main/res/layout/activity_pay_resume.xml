<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1302"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.btm.pagodirecto.activities.PayResume">

    <!--Include header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="115"
        android:orientation="horizontal"
        android:weightSum="750">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="228"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="228">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"></View>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:background="@drawable/back"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="350"
            android:gravity="center"
            android:text="Resumen de Compra"
            android:textColor="@color/white"
            android:textSize="@dimen/large" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/products_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="710"
        android:background="@drawable/white_rounder_corner"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="GridLayoutManager"
            app:spanCount="1"
            android:scrollbars="vertical"
            tools:context="com.btm.pagodirecto.activities.CommerceProducts"
            tools:listitem="@layout/list_item_pay_resume" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="97"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="SUBTOTAL"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/medium" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bs. 15.500"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/xLarge"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="750"
        android:layout_weight="90"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="360"
            android:layout_gravity="top"
            android:background="@drawable/main_button"
            android:gravity="center"
            android:text="CONTINUAR"
            android:textColor="@color/white"
            android:textSize="@dimen/medium" />
    </LinearLayout>

</LinearLayout>
