<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1200"
    android:orientation="vertical"
    android:id="@+id/fragment_content"
    android:background="@drawable/background"
    tools:context=".fragments.ProductsFragment">
    <HorizontalScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="750">
            <LinearLayout
                android:id="@+id/products_container"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="750">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1200"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="750">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="704"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="56"
                                android:orientation="horizontal"
                                android:weightSum="704">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="48"
                                    android:weightSum="56"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <Button
                                        android:id="@+id/btn_back"
                                        android:layout_width="36dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/back"
                                        android:gravity="center" />
                                </LinearLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="7"/>
                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="587"
                                    android:gravity="center"
                                    android:text="Lodge Restaurant"
                                    android:textColor="@color/white"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <LinearLayout

                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:layout_weight="62">
                                    <RelativeLayout
                                        android:id="@+id/shop_container_icon"
                                        android:clickable="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <LinearLayout
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:weightSum="62"
                                           android:orientation="horizontal">
                                           <LinearLayout
                                               android:layout_width="0dp"
                                               android:layout_height="match_parent"
                                               android:layout_weight="48"
                                               android:weightSum="56"
                                               android:orientation="vertical"
                                               android:gravity="center">
                                               <Button
                                                   android:layout_width="match_parent"
                                                   android:layout_height="0dp"
                                                   android:layout_weight="48"
                                                   android:background="@drawable/cart_icon_xhdpi"
                                                   android:gravity="center" />
                                           </LinearLayout>
                                       </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/container_item_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="62"
                                            android:gravity="end"
                                            android:visibility="gone">
                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="50"
                                                android:weightSum="62"
                                                android:orientation="vertical">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="50"
                                                    android:background="@drawable/dot_filled_xhdpi"
                                                    android:gravity="center">
                                                    <TextView
                                                        android:id="@+id/cart_items_count_txt"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:textSize="@dimen/xsmall"
                                                        android:text="9+"
                                                        android:textColor="@color/pd_blue"/>
                                                </LinearLayout>
                                            </LinearLayout>

                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1100"
                        app:layoutManager="GridLayoutManager"
                        app:spanCount="1"
                        tools:context="com.btm.pagodirecto.activities.CommerceProducts"
                        tools:listitem="@layout/list_item_product" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whiteTransparent"/>

</LinearLayout>
