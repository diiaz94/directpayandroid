<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1291"
    android:orientation="vertical"
    android:id="@+id/fragment_content"
    android:background="@drawable/background"
    tools:context=".fragments.ProductsFragment">

    <HorizontalScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="750">

            <LinearLayout
                android:id="@+id/products_container"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_weight="750">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1291">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="88"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="750">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="686"
                                    android:orientation="horizontal"
                                    android:weightSum="686">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="18"
                                        android:orientation="vertical"
                                        android:weightSum="88"
                                        android:gravity="center">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="34"
                                            android:orientation="horizontal"
                                            android:weightSum="18">
                                            <ImageButton
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="18"
                                                android:background="@color/transparent"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/back" />
                                        </LinearLayout>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="650"
                                        android:gravity="center">
                                        <TextView
                                            android:id="@+id/textView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Lodge Restaurant"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/xmedium"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="750"
                                android:id="@+id/linearLayout">
                                <Button
                                    android:id="@+id/btn_back"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="82"
                                    android:background="@color/transparent"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="582"/>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="82">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="82"
                                            android:orientation="horizontal">
                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="58"
                                                android:weightSum="88"
                                                android:orientation="vertical"
                                                android:gravity="center">
                                                <ImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="58"
                                                    android:background="@drawable/cart_icon_xhdpi"
                                                    android:gravity="center" />
                                            </LinearLayout>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/container_item_count"
                                            android:visibility="gone"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="82"
                                            android:orientation="horizontal"
                                            android:gravity="center">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="48"
                                                android:orientation="vertical"
                                                android:weightSum="88">
                                                <View
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="10"/>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:layout_weight="48"
                                                    android:background="@drawable/dot_filled_xhdpi"
                                                    android:gravity="center">

                                                    <TextView
                                                        android:id="@+id/cart_items_count_txt"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="0"
                                                        android:textColor="@color/pd_blue"
                                                        android:textSize="@dimen/xsmall" />
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                        <Button
                                            android:id="@+id/shop_container_icon"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/transparent"/>

                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <include layout="@layout/activity_product_detail" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1203"
                        app:layoutManager="GridLayoutManager"
                        app:spanCount="1"
                        tools:context="com.btm.pagodirecto.activities.CommerceProductsActivity"
                        tools:listitem="@layout/list_item_product" />
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/activity_cart" />
        </LinearLayout>


    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whiteTransparent"/>

</LinearLayout>
