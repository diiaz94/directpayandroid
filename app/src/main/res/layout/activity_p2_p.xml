<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1291"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.btm.pagodirecto.activities.P2PActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="750">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="690"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="48"
                android:orientation="horizontal"
                android:weightSum="690">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="48"
                    android:background="@drawable/back"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="594"
                    android:text="Pago"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn_shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="48"
                    android:background="@drawable/cart"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto a Pagar"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="120"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bs. 15.500"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="213"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:weightSum="213"
        android:paddingRight="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="93"
            android:padding="20dp"
            android:background="@drawable/main_edit_text"
            android:hint="Numero telefonico"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="27"></View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="93"
            android:padding="20dp"
            android:background="@drawable/main_edit_text"
            android:hint="Concepto"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="180"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="750">

        <Button
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:text="PAGAR"
            android:layout_weight="298"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/btn_pay"
            android:textColor="@color/white"
            android:background="@drawable/main_button"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="44"></View>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="100"
            android:textSize="15sp"
            android:padding="10dp"
            android:id="@+id/btn_sell"
            android:textColor="@color/white"
            android:src="@drawable/group_people"
            android:background="@drawable/main_button">
        </ImageButton>

    </LinearLayout>



</LinearLayout>
