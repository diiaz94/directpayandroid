<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:weightSum="215"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="193"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="750">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="710">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="195"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/trump" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="396"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="396">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="350"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="195">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="150"
                        android:orientation="vertical"
                        android:weightSum="150">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="45"
                            android:weightSum="398">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="365"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/product_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bs 3.000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="65"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Croissant"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="40"
                            android:gravity="end"
                            android:weightSum="465">


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container_btn_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="119"
                android:background="@drawable/add_to_cart_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="119">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="56"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="195">

                    <ImageButton
                        android:id="@+id/btn_buy"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="56"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/plus_icon__xhdpi" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
