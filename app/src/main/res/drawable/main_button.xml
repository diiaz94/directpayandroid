<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="200dp"/>
            <stroke android:width="1dp" android:color="#7dc0e2" />
            <gradient android:angle="-90" android:startColor="#0DFFFFFF" android:endColor="#0DFFFFFF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="200dp"/>
            <stroke android:width="1dp" android:color="#7dc0e2" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="200dp"/>
            <stroke android:width="1dp" android:color="#7dc0e2"/>
            <gradient android:angle="-90" android:startColor="#00FFFFFF" android:endColor="#00FFFFFF" />
        </shape>
    </item>
</selector>